# ── Muse — Streamlit Cloud Secrets ────────────────────────────────
# Copy this file to secrets.toml (or paste into Streamlit Cloud settings)
# and fill in your values.
#
# On Streamlit Cloud: Settings → Secrets → paste contents
# Locally: .streamlit/secrets.toml (gitignored)
# ──────────────────────────────────────────────────────────────────

# Anthropic API key (required)
ANTHROPIC_API_KEY = "sk-ant-..."

# App public URL — its presence signals "cloud mode"
# On Streamlit Cloud this is your app's URL, e.g.:
STREAMLIT_URL = "https://your-app.streamlit.app"

# ── Google OAuth (optional — enables Calendar & Gmail) ───────────
# Create OAuth 2.0 credentials (Web application type) at:
# https://console.cloud.google.com/apis/credentials
#
# IMPORTANT: Add your STREAMLIT_URL above as an authorized redirect URI
# in the Google Cloud Console.

[google_oauth]
client_id = "your-client-id.apps.googleusercontent.com"
client_secret = "GOCSPX-your-client-secret"
project_id = "your-project-id"
